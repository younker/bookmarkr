{{#each bookmarks}}
  {{#if children}}
    <li class="box{{#if @first}} selected{{/if}}" data-id={{id}}>
      {{title}} ({{child_count}}) / {{parentId}}
      <br />
      {{url}}
    </li>
  {{else}}
    <li class="box{{#if @first}} selected{{/if}}" data-id={{id}} data-url="{{url}}">
      {{{highlight 'title'}}} ({{@first}})
      <br />
      {{{highlight 'url'}}}
    </li>
  {{/if}}
{{else}}
  No results found.
{{/each}}
